{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        // "rootDir": "./src", // Removed to allow importing from ../../src
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "../../src/**/*" // Include parent project source for compilation
    ],
    "exclude": [
        "node_modules"
    ]
}